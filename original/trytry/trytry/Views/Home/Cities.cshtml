@model System.Data.DataTable
@{
    ViewBag.Title = "Cities";
    Layout = "~/Views/Shared/_User.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<table class="table table-bordered table-striped">
    <tr>

        <th>
            City Name
        </th>
        <th>
            Image
        </th>

        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            @*<td>
                    <img src="/Desktop/images" alt="" height=100 width=200 />
                </td>*@
            <td>
                <a href="@Url.Action("Edit", "City", new {@id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "City", new {@id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create","City")">Add City</a>


