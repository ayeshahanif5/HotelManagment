@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>City Name</th>

        <th>
            Hall Name
        </th>
        
        <th>
            Facilities
        </th>

        <th>
           Capacity
        </th>
        <th>
            Budget
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][6]</td>
            @*<td>@Model.Rows[i][6]</td>*@
            <td>@Model.Rows[i][9]</td>
            <td>@Model.Rows[i][10]</td>

            <td>
                <a href="@Url.Action("Edit", "Conference", new {@id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "Conference", new {@id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create","Conference")">Add Conference Hall</a>

