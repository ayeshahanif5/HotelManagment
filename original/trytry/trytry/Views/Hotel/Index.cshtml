@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
       
       
        <th>
            Hotel Name
        </th>
        <th>
            Address
        </th>
        <th>
            Facilities
        </th>
       
        <th>
            Budget
        </th>
        <th>
           Total Rooms
        </th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][5]</td>
            @*<td>@Model.Rows[i][6]</td>*@
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>
           
            <td>
                <a href="@Url.Action("Edit", "Hotel", new {@id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "Hotel", new {@id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create","Hotel")">Add Hotel</a>

