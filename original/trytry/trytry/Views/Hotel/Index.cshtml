@model IEnumerable<trytry.Models.hoteladmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Room Booking</h4>
    <hr />
    @foreach (var item in Model)
    {
        <div>
            <div>

 
              
                <h3>@item.hotelname</h3>
                <h3>@item.address</h3>
                <h3>@item.roomtype</h3>
                <h3>@item.facilities</h3>
                <h3>@item.budget</h3>
                <h3>@item.CityName</h3>


            </div>
            <div>
                <img src=" @Url.Content(item.image) " height=" 350" width="250" />
            </div>



            <div><p>@Html.ActionLink("Edit", "Edit", new { id = item.HotelId })` </p></div>
            <div><p>@Html.ActionLink("Delete", "Delete", new { id = item.HotelId })</p></div>
        </div>
    }
</div>
<p>
  
    @Html.ActionLink("Add Room", "Create")
</p>


